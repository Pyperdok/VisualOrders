<TableLayout
    android:id="@+id/TB_Order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:layout_marginHorizontal="5dp"
    >

        <TableRow
            android:id="@+id/TR_OrderTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TV_OrderID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/transparent"
                android:padding="8dp"
                android:text="228"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/TV_OrderDateTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="12.02.2022\n18:30"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/IB_OrderSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:src="@drawable/outline_settings_48"
                tools:ignore="SpeakableTextPresentCheck" />

        </TableRow>
    <TableRow android:id="@+id/TR_OrderCashier">

        <TextView
            android:id="@+id/TV_Cashier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="5dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="Кассир"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
